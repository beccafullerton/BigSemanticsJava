<meta_metadata_repository name="scholarlyPublication" package="ecologylab.semantics.generated.library.publication">

	<meta_metadata name="publication" extends="document" comment="A publication.">
		<scalar name="title" scalar_type="String" />
		<collection name="authors" child_type="author" />
		<scalar name="publisher" scalar_type="String" />
		<scalar name="pages" scalar_type="String" />
		<scalar name="isbn" scalar_type="String" />
		<scalar name="year" scalar_type="Int" />
		<collection name="subjects" child_type="subject">
			<scalar name="subject" as_composite_scalar="true" scalar_type="String" navigates_to="location" />
			<scalar name="location" scalar_type="ParsedURL" hide="true" />
		</collection>
		<scalar name="about_the_authors" scalar_type="String" />
		<collection name="common_terms" hide="true" child_type="term">
			<scalar name="term" as_composite_scalar="true" navigates_to="location" scalar_type="String" />
			<scalar name="location" hide="true" scalar_type="ParsedURL" />
			<scalar name="frequency" scalar_type="Int" />
		</collection>
	</meta_metadata>

	<meta_metadata name="author" extends="document" comment="An author of an article or creative work.">
		<scalar name="name" navigates_to="location" is_facet="true" as_composite_scalar="true" comment="" scalar_type="String" />
		<scalar name="affiliation" comment="" scalar_type="String" />
		<scalar name="location" hide="true" />
		<scalar name="city" scalar_type="String" />
	</meta_metadata>
	
	<meta_metadata name="general_book" extends="publication">
		<collection name="editors" child_type="author" />
		<scalar name="edition" scalar_type="String" />
		<collection name="table_of_contents" child_type="publication">
			<scalar name="title"  label="chapter title" />
		</collection>
		<scalar name="cover_image" scalar_type="ParsedURL" hide="true" />
	</meta_metadata>
	
	<meta_metadata name="publisher" extends="document" comment="A publishing company.">
		<scalar name="name" as_composite_scalar="true" navigates_to="location" is_face="true" scalar_type="String" />
		<scalar name="city" scalar_type="String" />
	</meta_metadata>

</meta_metadata_repository>