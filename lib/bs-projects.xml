  <target name="depend.ModifiedHttpClient" depends="depend.DownloaderPoolMessages">
    <ant antfile="${ant.file.bs-projects}/../../../BigSemanticsService/ModifiedHttpClient/build.xml"
         target="jar" inheritall="no" />
  </target>

