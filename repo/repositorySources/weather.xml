<meta_metadata_repository name="weather" default_user_agent_name="chrome_2"
 package="ecologylab.semantics.metametadata.example.generated"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

	<!--  +++++++++++++++++++++++++++++ weather report, used as an example of metaMetadata library +++++++++++++++++++++++++++++++++++++++ -->    
	<meta_metadata name="weather_report" extends="document" comment="The definition of weather report class.">
        <meta_metadata_field name="city" scalar_type="String" comment="The name of the city." />
        <meta_metadata_field name="weather" scalar_type="String" comment="The weather condition of the city, like sunny or cloudy." />
        <meta_metadata_field name="pic_url" scalar_type="ParsedURL" comment="The URL of the picture indicating weather condition." />
        <meta_metadata_field name="temperature" scalar_type="String" comment="The temperature." />
        <meta_metadata_field name="humidity" scalar_type="String" comment="The humidity of the air." />
        <meta_metadata_field name="wind" scalar_type="String" comment="The wind speed." />
		<meta_metadata_field name="dew_point" scalar_type="String" comment="The dew point." />
    </meta_metadata>

	<meta_metadata name="wu_weather_report" type="weather_report" parser="xpath" domain="wunderground.com" url_regex="http://www.wunderground.com/US/.*">
		<meta_metadata_field name="city" xpath="//table[@id='cityTable']//h1" />
        <meta_metadata_field name="weather" xpath="//div[@id='curcondbox']//div[@class='b']" />
        <meta_metadata_field name="pic_url" xpath="//div[@id='curcondbox']//img[@class='condIcon']/@src" />
        <meta_metadata_field name="temperature" xpath="//div[@id='curcondbox']//span[@pwsvariable='tempf']/@value" />
        <meta_metadata_field name="humidity" xpath="//div[@id='curcondbox']//span[@pwsvariable='humidity']" />
        <meta_metadata_field name="wind" xpath="//div[@id='curcondbox']//span[@pwsvariable='windspeedmph']" />
		<meta_metadata_field name="dew_point" xpath="//div[@id='curcondbox']//span[@pwsvariable='dewptf']" />
		
		<semantic_actions>
		  <save_report />
		</semantic_actions>
	</meta_metadata>
	
</meta_metadata_repository>