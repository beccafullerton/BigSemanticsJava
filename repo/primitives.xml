<meta_metadata_repository name="primitives" package="ecologylab.semantics.metadata.builtins" default_user_agent_name="chrome_2">
	<meta_metadata name="metadata" comment="The Metadata Class" dont_generate_class="true">
		<scalar name="meta_metadata_name" hide="true" ignore_in_term_vector="true" comment="Stores the name of the meta-metadata, and is used on restoring from XML." scalar_type="String" />
	</meta_metadata>
	
	<meta_metadata name="document" extends="metadata" comment="The Document Class" dont_generate_class="false">
		<scalar name="title" style="h1" layer="10.0" navigates_to="location" comment="The Title of the Document" scalar_type="String"  hint="XML_LEAF"/>
		<scalar name="description" layer="9.0" scalar_type="String" />
		<scalar name="location" always_show="true" layer="8.0" comment="The document's actual location." scalar_type="ParsedURL" />
		<scalar name="generation" layer="7.0" scalar_type="Int" />
		<scalar name="page_structure" layer="6.0" comment="For debugging. Type of the structure recognized by information extraction." scalar_type="String" />
		<scalar name="query" layer="5.0" comment="The search query" scalar_type="String" />
	</meta_metadata>
	
	<meta_metadata name="entity" extends="metadata" comment="Reference to a nested document." dont_generate_class="false">
		<scalar name="location" hide="true" comment="The document's actual location." scalar_type="ParsedURL" />
		<scalar name="gist" navigates_to="location" comment="Initial text that describes the document before its downloaded." scalar_type="String" />
	</meta_metadata>
	
	<meta_metadata name="pdf" extends="document" comment="The PDF class." parser="pdf">
		<selector>
			<mime_type>application/pdf</mime_type>
			<mime_type>application/x-pdf</mime_type>
			<mime_type>image/pdf</mime_type>
			<suffix>pdf</suffix>
		</selector>
		<scalar name="author" comment="The author of the pdf document" scalar_type="String" />
		<scalar name="summary" comment="Summary of the pdf document" scalar_type="String" />
		<scalar name="pdf_keywords_string" comment="Key Words of the document" scalar_type="String" />
		<scalar name="subject" comment="Subject of the document" scalar_type="String" />
		<scalar name="trapped" scalar_type="String" />
		<scalar name="modified" scalar_type="String" />
		<scalar name="contents" comment="Contents of the document" scalar_type="String" />
		<scalar name="creationdate" comment="Creation date of the document" scalar_type="String" />
	</meta_metadata>
	
	<meta_metadata name="media" extends="metadata" comment="Extend this for Image, sounds, video, etc." dont_generate_class="false">
		<scalar name="context" layer="10.0" scalar_type="String" />
		<scalar name="meta_metadata_name" hide="true" ignore_in_term_vector="true" comment="Stores the name of the meta-metadata, and is used on restoring from XML." scalar_type="String" />
	</meta_metadata>
	
	<meta_metadata name="image" extends="media" comment="The Image Base Class" dont_generate_class="false">
		<selector>
			<mime_type>image/jpeg</mime_type>
			<mime_type>image/png</mime_type>
			<mime_type>image/gif</mime_type>
			<mime_type>image/bmp</mime_type>
			<suffix>jpg</suffix>
			<suffix>jpeg</suffix>
			<suffix>gif</suffix>
			<suffix>png</suffix>
			<suffix>bmp</suffix>
		</selector>
		<scalar name="caption" style="h1" navigates_to="location" always_show="true" layer="11.0" comment="The caption of the image." scalar_type="String" />
		<scalar name="location" hide="true" layer="9.0" comment="Location of the image." scalar_type="ParsedURL" />
		<scalar name="local_location" hide="true" comment="Relative location of local copy of image." scalar_type="String" />
	</meta_metadata>
	<meta_metadata name="debug_metadata" dont_generate_class="true">
		<scalar name="new_term_vector" ignore_in_term_vector="true" scalar_type="StringBuilder" />
	</meta_metadata>
</meta_metadata_repository>